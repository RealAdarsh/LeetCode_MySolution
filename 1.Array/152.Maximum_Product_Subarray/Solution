class Solution {
public:
    int maxProduct(vector<int>& nums) {
        
        int smallest, largest, maximum;
        smallest=largest=maximum=nums[0];
        
        for (int i=1; i<nums.size(); i++)
        {
            int temp=max({nums[i], nums[i]*largest, nums[i]*smallest});
            smallest=min({nums[i], nums[i]*largest,nums[i]*smallest});
            largest=temp;
            maximum=max(largest,maximum);
        }
        
        return maximum;
        
    }
};
